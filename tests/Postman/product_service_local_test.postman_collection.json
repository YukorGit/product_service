	"item": [
		{
			"name": "Base",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Response has correct JSON structure\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    \r",
							"    pm.expect(jsonData).to.have.property('data');\r",
							"    \r",
							"    if (jsonData.data.length > 0) {\r",
							"        var product = jsonData.data[0];\r",
							"        \r",
							"        // Keys\r",
							"        pm.expect(product).to.have.property('id');\r",
							"        pm.expect(product).to.have.property('name');\r",
							"        pm.expect(Number(product.price)).to.be.a('number'); \r",
							"\r",
							"        // In stock\r",
							"        pm.expect(product).to.have.property('in_stock');\r",
							"        pm.expect(product.in_stock).to.be.a('boolean');\r",
							"        \r",
							"        // Category\r",
							"        pm.expect(product).to.have.property('category');\r",
							"        pm.expect(product.category).to.have.property('name');\r",
							"        \r",
							"        // Enum values check\r",
							"        var allowedCategories = ['Electronics', 'Books', 'Clothing', 'Toys', 'Furniture'];\r",
							"        pm.expect(allowedCategories).to.include(product.category.name);\r",
							"    }\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"method": "GET",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "foo1",
							"value": "bar1",

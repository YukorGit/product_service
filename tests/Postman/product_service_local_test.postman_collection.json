						"products"
					],
					"query": [
						{
							"key": "per_page",
							"value": "5"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Filtered: price, category, in stock",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"All items match filter criteria\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    var products = jsonData.data;\r",
							"    var targetCatId = parseInt(pm.environment.get(\"valid_category_id\"));\r",
							"\r",
							"    products.forEach(function(product) {\r",
							"        // Check IDs\r",
							"        pm.expect(product.category.id).to.eql(targetCatId);\r",
							"        \r",
							"        // Price\r",
							"        pm.expect(product.price).to.be.at.least(10);\r",
							"        pm.expect(product.price).to.be.at.most(500);\r",
							"        \r",
							"        // can_buy\r",
							"        // Если цена > 0 и in_stock=true, то can_buy должно быть true\r",
							"        pm.expect(product.can_buy).to.be.true;\r",
							"    });\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/products?category_id={{valid_category_id}}&price_from=10&price_to=500&in_stock=1",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"products"
					],
					"query": [
						{
							"key": "category_id",
							"value": "{{valid_category_id}}"
						},
						{
							"key": "price_from",
							"value": "10"
						},
						{
							"key": "price_to",
							"value": "500"
						},
						{
							"key": "in_stock",
							"value": "1"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Sort by price",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Items are sorted by price DESC\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    var products = jsonData.data;\r",
							"    \r",
							"    for (var i = 0; i < products.length - 1; i++) {\r",
							"        var currentPrice = products[i].price;\r",
							"        var nextPrice = products[i+1].price;\r",
							"        \r",
							"        pm.expect(currentPrice).to.be.at.least(nextPrice);\r",
							"    }\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/products?sort=price_desc&per_page=10&in_stock=1",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"products"
					],
					"query": [
						{
							"key": "sort",
							"value": "price_desc"
						},
						{
							"key": "per_page",
							"value": "10"
						},
						{
							"key": "in_stock",
							"value": "1"
						}
					]
				}
			},
			"response": []
		},
